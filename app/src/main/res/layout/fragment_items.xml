<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="8dp">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        app:cardCornerRadius="8dp"
        app:cardElevation="4dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="8dp">

            <EditText
                android:id="@+id/searchProductEdit"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="البحث عن منتج"
                android:inputType="text"
                android:padding="8dp" />

            <ImageButton
                android:id="@+id/scanBarcodeButton"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:contentDescription="مسح الباركود"
                android:src="@android:drawable/ic_menu_camera" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <!-- قسم إضافة منتوج جديد -->
    <LinearLayout
        android:id="@+id/addProductSection"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        android:visibility="gone"
        android:background="@color/colorBackground">

        <TextView
            android:id="@+id/noResultsTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="لا توجد نتائج للبحث"
            android:textAlignment="center"
            android:textSize="16sp"
            android:textColor="@color/colorPrimary"
            android:layout_marginBottom="12dp" />

        <Button
            android:id="@+id/addNewProductButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="إضافة منتوج جديد"
            android:backgroundTint="@color/colorAccent"
            android:textColor="@color/colorWhite"
            android:layout_marginBottom="8dp" />
    </LinearLayout>

    <!-- قسم المنتجات -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/productsRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</LinearLayout>