<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <EditText
            android:id="@+id/productNameInput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="اسم المنتج"/>

        <EditText
            android:id="@+id/productCategoryInput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="فئة المنتج"/>

        <EditText
            android:id="@+id/productBarcodeInput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="الباركود"/>

        <EditText
            android:id="@+id/productSellingPriceInput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="سعر البيع"
            android:inputType="numberDecimal"/>

        <EditText
            android:id="@+id/productCostPriceInput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="سعر الشراء"
            android:inputType="numberDecimal"/>

        <EditText
            android:id="@+id/productQuantityInput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="الكمية"
            android:inputType="number"/>

        <EditText
            android:id="@+id/productMinQuantityInput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="الحد الأدنى للمخزون"
            android:inputType="number"/>

        <Button
            android:id="@+id/uploadImageButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="تحميل صورة"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="16dp">

            <Button
                android:id="@+id/cancelButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginEnd="8dp"
                android:text="إلغاء"
                android:backgroundTint="@color/design_default_color_error"
                android:textColor="@color/colorWhite"/>

            <Button
                android:id="@+id/addProductButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="8dp"
                android:text="إضافة منتج"
                android:backgroundTint="@color/colorAccent"
                android:textColor="@color/colorWhite"/>

        </LinearLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/productsRecyclerView"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"/>

    </LinearLayout>
</ScrollView>