<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <EditText
            android:id="@+id/productNameInput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="اسم المنتج"/>

        <EditText
            android:id="@+id/productCategoryInput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="فئة المنتج"/>

        <EditText
            android:id="@+id/productBarcodeInput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="الباركود"/>

        <EditText
            android:id="@+id/productSellingPriceInput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="سعر البيع"
            android:inputType="numberDecimal"/>

        <EditText
            android:id="@+id/productCostPriceInput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="سعر الشراء"
            android:inputType="numberDecimal"/>

        <EditText
            android:id="@+id/productQuantityInput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="الكمية"
            android:inputType="number"/>

        <EditText
            android:id="@+id/productMinQuantityInput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="الحد الأدنى للمخزون"
            android:inputType="number"/>

        <Button
            android:id="@+id/uploadImageButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="تحميل صورة"/>

        <Button
            android:id="@+id/addProductButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="إضافة منتج"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/productsRecyclerView"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"/>

    </LinearLayout>
</ScrollView>